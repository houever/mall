<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mall.sms.mapper.ISmsCategoryBoundsMapper">
                <!-- 通用查询映射结果 -->
        <resultMap id="BaseResultMap" type="com.mall.sms.entity.SmsCategoryBounds">
                                                                                                                                                        <result column="id" property="id"/>
                                                            <result column="category_id" property="categoryId"/>
                                                                <result column="grow_bounds" property="growBounds"/>
                                                                <result column="buy_bounds" property="buyBounds"/>
                                                                <result column="work" property="work"/>
                                    </resultMap>

                <!-- 通用查询结果列 -->
        <sql id="Base_Column_List">
                            id,
                        category_id, grow_bounds, buy_bounds, work
        </sql>

        <select id="getAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sms_category_bounds
    </select>
</mapper>