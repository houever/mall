<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mall.oms.mapper.IOmsRefundInfoMapper">
                <!-- 通用查询映射结果 -->
        <resultMap id="BaseResultMap" type="com.mall.oms.entity.OmsRefundInfo">
                                                                                                                                                                                                                <result column="id" property="id"/>
                                                            <result column="order_return_id" property="orderReturnId"/>
                                                                <result column="refund" property="refund"/>
                                                                <result column="refund_sn" property="refundSn"/>
                                                                <result column="refund_status" property="refundStatus"/>
                                                                <result column="refund_channel" property="refundChannel"/>
                                                                <result column="refund_content" property="refundContent"/>
                                    </resultMap>

                <!-- 通用查询结果列 -->
        <sql id="Base_Column_List">
                            id,
                        order_return_id, refund, refund_sn, refund_status, refund_channel, refund_content
        </sql>

        <select id="getAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM oms_refund_info
    </select>
</mapper>